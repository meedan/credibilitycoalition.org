---
layout: "default"
slug: "updates"
---

<section>
    <div class="section-inner">
        <h1>Updates</h1>
        <h4>Our team of core and advisory members meet regularly online and offline to share findings and results.</h4>
    </div>
</section>

<section>
  <div class="section-inner">
    <h3 class="layout--padding-bottom">Mentions</h3>
    <ul class="timeline">

      <% data.timeline_press_mentions.each do |item| %>
        <li>
          <%= partial "partials/timeline_entry", :locals => {
              :link => item[:link],
              :title => item[:title],
              :date => item[:date],
              :attribution => item[:attribution],
            } %>
        </li>
      <% end %>      
    </ul>
  </div>
</section>


<section>
  <div class="section-inner">
    <h3 class="layout--padding-bottom">Updates</h3>
    <ul class="timeline">
      <% data.timeline_press_releases.each do |item| %>
        <li>
          <%= partial "partials/timeline_entry", :locals => {
              :link => item[:link],
              :title => item[:title],
              :date => item[:date],
              :attribution => item[:attribution],
            } %>
        </li>
      <% end %>
    </ul>
  </div>
</section>
